FROM php:7.2-cli

# Чтобы компосер не ругался, когда его запускают от рута. Хотя у меня и так не ругался.
#ENV COMPOSER_ALLOW_SUPERUSER 1

# --1 флаг для установки 1 версии компосера
RUN curl -sS https://getcomposer.org/installer | php -- \
--install-dir=/usr/bin --filename=composer --1 --quiet

RUN apt-get update && apt-get install -y unzip

WORKDIR /app